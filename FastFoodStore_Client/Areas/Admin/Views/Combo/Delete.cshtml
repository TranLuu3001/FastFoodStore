@model FastFoodStore_Client.Models.Combo

@{
    ViewData["Title"] = "Edit Delete";
}


<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Delete Combo</h2>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="tm-edit-product-form" enctype="multipart/form-data">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="ComboName" class="control-label"></label>
                        <input asp-for="ComboName" class="form-control" />
                        <span asp-validation-for="ComboName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="ComboId" class="form-control" type="hidden" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Hiển thị ảnh hiện tại -->
                    <div class="form-group">
                        <label class="control-label">Current Image</label>
                        @if (!string.IsNullOrEmpty(Model.ImageURL))
                        {
                            <div>
                                <img src="~/img/food_menu/@Model.ImageURL" alt="Food Image" style="max-width: 200px; max-height: 200px;" />
                            </div>
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                    <div class="form-group">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

