@model FastFoodStore_Client.Models.FoodItem

<div class="container my-5 mt-4 mb-4">
  
    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-6">
            @if (Model != null && !string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="~/img/food_menu/@Model.ImageURL"
                     alt="Hình ảnh sản phẩm"
                     class="img-fluid rounded"
                     style="width:70%" />
            }
            else
            {
                <img src="~/img/food_menu/default.jpg"
                     alt="Hình ảnh sản phẩm"
                     class="img-fluid rounded"
                     style="width:70%" />
            }
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            @if (Model != null)
            {
                <h1 class="mb-3">@Model.FoodName</h1>
                <p class="text-muted" style="max-height: 150px; overflow-y: auto; text-overflow: ellipsis; word-wrap: break-word; padding-right: 10px;">
                    @Model.Description
                </p>
                <h2 class="text-danger">@Model.Price</h2>
     @*            <h2 class="text-danger">@Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</h2> *@
                <form asp-action="AddCart" method="post">
                    <input type="hidden" name="FoodId" value="@Model.FoodId" />
                    <input type="number" class="form-control" name="quantity" />
                    <button type="submit" class="btn btn-primary btn-lg mt-3">Thêm vào giỏ hàng</button>
                </form>
            }
            else
            {
                <p>Thông tin món ăn không có sẵn.</p>
            }
        </div>
    </div>
</div>  